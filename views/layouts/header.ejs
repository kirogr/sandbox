<header class="bg-white shadow fixed w-full top-0 z-10">
    <nav class="container mx-auto px-6 py-3 flex justify-between items-center">
        <div class="flex space-x-4">
            <a href="/dashboard" class="px-3 py-2 rounded text-gray-700 hover:bg-gray-200">Dashboard</a>
            <a href="/recent" class="px-3 py-2 rounded text-gray-700 hover:bg-gray-200">Recent</a>
            <a href="/search" class="px-3 py-2 rounded text-gray-700 hover:bg-gray-200">Search</a>
        </div>
        <div class="flex space-x-4 items-center">
            <!-- User's name -->
            <div class="text-gray-700"><%= user.username %></div>
            <!-- User's picture -->
            <img src="<%= user.avatar %>" class="w-8 h-8 rounded-full">
            <div class="flex space-x-4">
                <a href="/settings" class="px-3 py-2 rounded text-gray-700 hover:bg-gray-200">Settings</a>
                <a href="/logout" class="px-3 py-2 rounded text-gray-700 hover:bg-gray-200">Logout</a>
            </div>
        </div>
    </nav>
</header>
